{{define "edit-photo"}}
<div class="modal-dialog" role="document">
	<div class="modal-content">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<h4 class="modal-title" id="editPhotoLabel">照片编辑</h4>
			<span class="hidden" id="photo-id">0</span>
		</div>
		<div class="modal-body">
			<form>
				<div class="form-group">
					<label for="photo-time" class="control-label">时间:</label>
					<input type="text" class="form-control" id="photo-time">
				</div>
				<div class="form-group">
					<label for="photo-address" class="control-label">地点:</label>
					<input type="text" class="form-control" id="photo-address">
				</div>
				<div class="form-group">
					<label for="photo-title" class="control-label">标题:</label>
					<input type="text" class="form-control" id="photo-title">
				</div>
				<div class="form-group">
					<label for="photo-image" class="control-label">图片:</label>
					<div id="photo-image">
						<img src="" alt="请上传照片" /><br/>
						<button class="btn btn-default" type="button" id="photo-image-add">添加图片</button>
					</div>
				</div>
				<div class="form-group">
					<label for="photo-desc" class="control-label">描述:</label>
					<textarea class="form-control" id="photo-desc"></textarea>
				</div>
			</form>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
			<button type="button" class="btn btn-primary">确定</button>
		</div>
	</div>
</div>
{{end}}
